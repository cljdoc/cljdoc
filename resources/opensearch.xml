<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                       xmlns:moz="http://www.mozilla.org/2006/browser/search/">
    <ShortName>cljdoc</ShortName>
    <Description>cljdoc is a website building &amp; hosting documentation for Clojure/Script libraries</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <Image width="16" height="16" type="image/x-icon">{{base.url}}{{favicon.ico}}</Image>
    <Url type="text/html" template="{{base.url}}/search">
        <Param name="q" value="{searchTerms}"/>
    </Url>
    <Url type="application/x-suggestions+json" template="{{base.url}}/api/search-suggest">
        <Param name="q" value="{searchTerms}"/>
    </Url>
    <moz:SearchForm>{{base.url}}/search</moz:SearchForm>
</OpenSearchDescription>
