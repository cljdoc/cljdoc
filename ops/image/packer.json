{
    "variables": {
      "do_token": "{{env `TF_VAR_do_token`}}"
    },
    "builders": [
        {
            "type": "digitalocean",
            "api_token": "{{user `do_token`}}",
            "image": "fedora-27-x64",
            "region": "ams3",
            "size": "2gb",
            "ssh_username": "root",
            "snapshot_name": "cljdoc-{{isotime}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "fedora-provision.sh"
            ]
        },
        {
            "type": "file",
            "source": "nginx.conf",
            "destination": "/etc/nginx/nginx.conf"
        },
        {
            "type": "file",
            "source": "cljdoc.xyz.conf",
            "destination": "/etc/nginx/sites-available/cljdoc.xyz.conf"
        },
        {
            "type": "file",
            "source": "cljdoc.org.conf",
            "destination": "/etc/nginx/sites-available/cljdoc.org.conf"
        },
        {
            "type": "file",
            "source": "cljdoc-api.service",
            "destination": "/etc/systemd/system/cljdoc-api.service"
        }
    ]
}
